extends layout
{% load webdesign %}
block content
  .container
    .stripe.col-sm-10.col-sm-offset-1.white-shadow
      .col-sm-6
        img(src='#{STATIC_URL}img/logo.png', title='Destiny Resources', width='100%')
      .col-md-4.col-md-offset-1.text-center
        .hidden-sm
          br
        //-h3(style='font-variant: small-caps') what we do
        hr.blue.dashed
        .hidden-sm.hidden-md
          br
        p Destiny Resources is a small Oil &amp; Natural Gas exploration company focused on the Upper Gulf Coast.
        .hidden-sm.hidden-md
          br
        hr.blue.dashed
  .container
    .col-sm-12
      br
      br
  .container
    .white-shadow.col-md-2.col-md-offset-1.h320
      h3.text-center(style='font-variant: small-caps') focus areas
      hr.blue.dashed
      {% for area in areas %}
      .col-sm-10.col-sm-offset-1
        a(href='#{area.get_absolute_url()}')
          h6 #{area.name}
          {% if not forloop.last %}
          hr
          {% endif %}
      {% endfor %}
    .white-shadow.col-md-7.col-md-offset-1.h320
      img(src='#{STATIC_URL}img/focus-area.png', title='Destiny Resources', width='100%')
      br
