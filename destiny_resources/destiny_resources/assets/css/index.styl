*
  margin 0px
  padding 0px
  border 0px
  text-decoration none
  font-family "Helvetica", sans-serif

html, body
  width 100%
  height 100%
  background-image url('../images/bg.png')

#todo
  margin 40px auto
  text-align center
  width 600px
  height auto
  min-height 100%
  //padding 40px 100px
  background-image: url("../images/oil-rig.png");
  background-repeat: no-repeat;
  background-position: -110px 210px
  background-size: 660px 500px;
p
  text-align center
  font-size 13pt
a
  color #343496
.stripe
  position absolute
  left 0px
  padding 30px 0px
  width 100%
  height 190px
  background-color #343496
  // needs latest Compass, add '@import "compass"' to your scss
  background-color: #2f2993; // Old browsers
  @include filter-gradient(#2f2993, #2f2993, vertical); // IE6-9
  @include background-image(linear-gradient(top, #2f2993 0%,#343496 50%,#2f2993 100%));
  opacity: .85;
  box-shadow 0px 15px 35px rgba(0,0,0,0.3)
  .center
    width 721px
    margin 0 auto
  h2
    color #fff
  p,  a p
    font-family: 'Economica' sans-serif
    margin 10px auto
    color #fff
    width 350px
    font-weight 200
    line-height 15pt
    font-size 18px
.content
  width 600px
  height auto
  position relative
  top 260px
  margin 20px auto 0px auto
  p
    font-size 12px
strong
  font-variant small-caps
  font-size 18pt
  color white

.span4
  width 350px
  height 160px
  margin 10px 10px 0 0
  display inline-block
  float left
  text-align center
  h3
    color #fff
    width 350px
    margin 22px 0 36px 0
.span4:first-child
  border-right 1px dashed #fff
  margin-left 0px
  padding-left 0px
.span4:last-child
  margin-right 0px
  padding-right 0px
.link
  height 30px
  width 340px
  background-size 90px 90px
  background-repeat no-repeat
  background-position 10% 10%
  padding 25px 0 30px 25px
  margin 0px 10px
  float left
  display inline-block
  p
    color #fff
.link:hover
  opacity .5
#phone
  padding-top 15px
  padding-left 0px
  background-image url('../images/phone.svg')
#email
  background-image url('../images/email.svg')

h1
  font-family 'Adamina', serif
  color #333366
  font-variant small-caps

footer
  position fixed
  bottom 5px
  right 5px
  p
    font-size 10px
